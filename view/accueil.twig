            {# <i class="material-icons">menu</i> #}
            
            <img src="public/img/menu.png" width="30" height="30">
        <!-- </a> -->
    </div>
    <script>
        var menu = document.querySelector('#menu');
        function showMenu() {
            document.querySelector('.sidebar_menu').classList.toggle('show');
        }
        function hiddenMenu() {
            document.querySelector('.sidebar_menu').classList.remove('show');
        }
    </script>

    {# header bar #}
