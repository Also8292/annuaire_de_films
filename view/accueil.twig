    <div class="carousel-item active">
      <img class="d-block w-100" src="public/img/slide4.jpg" alt="First slide" style="height: 630px; width: 100%;">
        <div class="carousel-caption d-none d-md-block">
            <h1 class="title">Justice League</h1>
            <p></p>
        </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="public/img/slide1.jpg" alt="Second slide" style="height: 630px; width: 100%;">        
        <div class="carousel-caption d-none d-md-block">
            <h1 class="title">Zootopie</h1>
            <p></p>
        </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="public/img/slide2.jpg" alt="Third slide" style="height: 630px; width: 100%;">        
        <div class="carousel-caption d-none d-md-block">
            <h1 class="title">Peter Rabbit</h1>
            <p></p>
        </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="public/img/slide3.jpg" alt="Third slide" style="height: 630px; width: 100%;">        
        <div class="carousel-caption d-none d-md-block">
            <h1 class="title">Les Minions</h1>
            <p></p>
        </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

